<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tvExistinPreviousTrainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/spacing_10"
        android:fontFamily="@font/poppins_medium"
        android:text="@string/filter"
        android:textColor="@color/bluee"
        android:textSize="@dimen/font_15" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.3dp"
        android:background="@color/textcolorgray" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:id="@+id/tvSelectCategory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/spacing_10"
            android:fontFamily="@font/poppins_medium"
            android:text="@string/select_category"
            android:textColor="@color/black"
            android:textSize="@dimen/font_13" />


        <EditText
            android:id="@+id/etSelectcategory"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/spacing_10"
            android:layout_marginEnd="@dimen/spacing_10"
            android:drawableEnd="@drawable/ic_list"
            android:focusable="false"
            android:fontFamily="@font/poppins_regular"
            android:hint="@string/select_category"
            android:padding="@dimen/spacing_10"
            android:imeOptions="actionNext"
            android:textColor="@color/black"
            android:textSize="@dimen/font_12"
            android:background="@drawable/custom_weight_layout"
            android:textColorHint="@color/textcolorgray"
            tools:ignore="LabelFor"
            android:autofillHints="0"
            android:inputType="text" />
        <TextView
            android:id="@+id/tvSelectSubCategory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/spacing_10"
            android:fontFamily="@font/poppins_medium"
            android:text="@string/select_sub_category"
            android:textColor="@color/black"
            android:textSize="@dimen/font_13" />


        <EditText
            android:id="@+id/etSubcategory"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/spacing_10"
            android:layout_marginEnd="@dimen/spacing_10"
            android:drawableEnd="@drawable/ic_list"
            android:focusable="false"
            android:fontFamily="@font/poppins_regular"
            android:hint="@string/select_sub_category"
            android:padding="@dimen/spacing_10"
            android:imeOptions="actionNext"
            android:textColor="@color/black"
            android:textSize="@dimen/font_12"
            android:background="@drawable/custom_weight_layout"
            android:textColorHint="@color/textcolorgray"
            tools:ignore="LabelFor"
            android:autofillHints="0"
            android:inputType="text" />

        <TextView
        android:id="@+id/tvLanguage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/spacing_10"
        android:fontFamily="@font/poppins_medium"
        android:text="@string/language"
        android:textColor="@color/black"
        android:textSize="@dimen/font_13" />

        <EditText
            android:id="@+id/etlanguage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/spacing_10"
            android:layout_marginEnd="@dimen/spacing_10"
            android:drawableEnd="@drawable/ic_list"
            android:focusable="false"
            android:fontFamily="@font/poppins_regular"
            android:hint="@string/select_language"
            android:padding="@dimen/spacing_10"
            android:imeOptions="actionNext"
            android:textColor="@color/black"
            android:textSize="@dimen/font_12"
            android:background="@drawable/custom_weight_layout"
            android:textColorHint="@color/textcolorgray"
            tools:ignore="LabelFor"
            android:autofillHints="0"
            android:inputType="text" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_20"
            android:layout_marginStart="@dimen/spacing_10"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnSubmit"
                style="@style/ButtonStyle"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_margin="@dimen/spacing_5"
                android:layout_gravity="center"
                android:text="@string/submit"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackgroundBorderless"
                android:padding="@dimen/spacing_10"
                android:textSize="@dimen/font_15" />

            <Button
                android:id="@+id/btnCancel"
                style="@style/ButtonDefaultStyle"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_margin="@dimen/spacing_10"
                android:layout_gravity="center"
                android:text="@string/cancel"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackgroundBorderless"
                android:textColor="@color/bluee"
                android:padding="@dimen/spacing_10"
                android:textSize="@dimen/font_15" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>