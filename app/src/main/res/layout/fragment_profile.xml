                            android:layout_width="18dp"
                            android:layout_height="18dp"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"
                            android:src="@drawable/next"
                            android:contentDescription="@string/todo" />
                    </RelativeLayout>
                </LinearLayout>

