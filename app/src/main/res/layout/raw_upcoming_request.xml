<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:backgroundTint="@color/white"
    android:layout_margin="@dimen/spacing_10"
    app:cardCornerRadius="@dimen/spacing_5">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/ivUpcomingRequest"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:scaleType="fitXY"
            android:contentDescription="@string/todo" />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/ivUpcomingRequest"
            android:layout_centerVertical="true"
            android:padding="@dimen/spacing_5"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tvName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:fontFamily="@font/poppins_medium"
                android:textSize="@dimen/font_15"
                android:text="@string/bewell_bykelly"/>
            <TextView
                android:id="@+id/tvYoga"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/bluee"
                android:fontFamily="@font/poppins_medium"
                android:textSize="@dimen/font_13"
                android:text="@string/yoga"/>
            <TextView
                android:id="@+id/tvDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/textcolorgray"
                android:fontFamily="@font/poppins_medium"
                android:textSize="@dimen/font_12"
                android:text="@string/_12_06_2020_14_00pm"/>
        </LinearLayout>
    </RelativeLayout>

   </androidx.cardview.widget.CardView>
