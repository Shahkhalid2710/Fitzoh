<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".ui.home.plan.activities.SelectPlanActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/ivBack"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_centerVertical="true"
            android:focusable="true"
            android:foreground="?attr/selectableItemBackgroundBorderless"
            android:layout_marginStart="@dimen/spacing_10"
            android:src="@drawable/leftarrow"
            android:contentDescription="@string/todo" />

        <TextView
            android:id="@+id/tvplan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:fontFamily="@font/poppins_medium"
            android:text="@string/selectyourplan"
            android:textColor="@color/black"
            android:textSize="@dimen/font_18" />
    </RelativeLayout>

  <FrameLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_margin="@dimen/spacing_10">
      <ImageView
          android:id="@+id/ivBeginner"
          android:layout_width="match_parent"
          android:layout_height="130dp"
          android:src="@drawable/image_beginner"
          android:scaleType="centerCrop"
          android:focusable="true"
          android:foreground="?attr/selectableItemBackgroundBorderless"
          android:contentDescription="@string/todo" />
      <TextView
          android:id="@+id/tvBeginner"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:fontFamily="@font/poppins_bold"
          android:textColor="@color/white"
          android:textSize="@dimen/font_22"
          android:text="@string/beginner"
          android:layout_gravity="center"/>
  </FrameLayout>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/spacing_10">
        <ImageView
            android:id="@+id/ivIntermedeter"
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:src="@drawable/image_intermedeter"
            android:scaleType="centerCrop"
            android:focusable="true"
            android:foreground="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="@string/todo" />
        <TextView
            android:id="@+id/tvIntermediate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_bold"
            android:textColor="@color/white"
            android:textSize="@dimen/font_22"
            android:text="@string/intermediate"
            android:layout_gravity="center"/>
    </FrameLayout>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/spacing_10">
        <ImageView
            android:id="@+id/ivAdvance"
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:src="@drawable/image_advance"
            android:scaleType="centerCrop"
            android:focusable="true"
            android:foreground="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="@string/todo" />
        <TextView
            android:id="@+id/tvAdvance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_bold"
            android:textColor="@color/white"
            android:textSize="@dimen/font_22"
            android:text="@string/advance"
            android:layout_gravity="center"/>
    </FrameLayout>
</LinearLayout>