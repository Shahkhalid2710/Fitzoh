<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".ui.otpscreen.activities.OTPActivity">


    <ImageView
        android:id="@+id/ivlogo"
        android:layout_width="150dp"
        android:layout_height="80dp"
        android:layout_gravity="center"
        android:src="@drawable/fitzohlogo"
        android:contentDescription="@string/todo" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/spacing_50"
        android:background="@drawable/custom_layout">

        <ImageView
            android:id="@+id/ivPassword"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_gravity="center"
            android:padding="@dimen/spacing_15"
            android:src="@drawable/password"
            android:contentDescription="@string/todo" />
    </LinearLayout>

    <TextView
        android:id="@+id/tvWelcome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/spacing_10"
        android:fontFamily="@font/poppins_semibold"
        android:text="@string/verifyaccount"
        android:textColor="@color/black"
        android:textSize="@dimen/font_22" />

    <TextView
        android:id="@+id/tvsignInWithNoEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/spacing_20"
        android:layout_marginTop="@dimen/spacing_10"
        android:layout_marginEnd="@dimen/spacing_20"
        android:fontFamily="@font/poppins_medium"
        android:gravity="center"
        android:text="@string/otpsend"
        android:textColor="@color/textcolorgray"
        android:textSize="@dimen/font_16" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/spacing_20"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/et1"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_margin="@dimen/spacing_5"
            android:background="@drawable/edittext_border"
            android:digits="0123456789"
            android:imeOptions="actionNext"
            android:fontFamily="@font/poppins_semibold"
            android:gravity="center"
            android:inputType="number"
            android:maxLength="1"
            android:textColor="@color/black"
            tools:ignore="LabelFor"
            android:autofillHints="0" />

        <EditText
            android:id="@+id/et2"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_margin="@dimen/spacing_5"
            android:background="@drawable/edittext_border"
            android:digits="0123456789"
            android:imeOptions="actionNext"
            android:fontFamily="@font/poppins_semibold"
            android:gravity="center"
            android:inputType="number"
            android:maxLength="1"
            android:textColor="@color/black"
            tools:ignore="LabelFor"
            android:autofillHints="0"/>

        <EditText
            android:id="@+id/et3"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_margin="@dimen/spacing_5"
            android:background="@drawable/edittext_border"
            android:digits="0123456789"
            android:imeOptions="actionNext"
            android:fontFamily="@font/poppins_semibold"
            android:gravity="center"
            android:inputType="number"
            android:maxLength="1"
            android:textColor="@color/black"
            tools:ignore="LabelFor"
            android:autofillHints="0"/>

        <EditText
            android:id="@+id/et4"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_margin="@dimen/spacing_5"
            android:background="@drawable/edittext_border"
            android:digits="0123456789"
            android:imeOptions="actionDone"
            android:fontFamily="@font/poppins_semibold"
            android:gravity="center"
            android:inputType="number"
            android:maxLength="1"
            android:textColor="@color/black"
            tools:ignore="LabelFor"
            android:autofillHints="0"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/spacing_20"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvDontgetCode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_regular"
            android:text="@string/dontgetcode"
            android:textColor="@color/black"
            android:textSize="@dimen/font_16" />

        <TextView
            android:id="@+id/tvResend"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_semibold"
            android:padding="@dimen/spacing_5"
            android:text="@string/resend"
            android:textColor="@color/signincolor"
            android:textSize="@dimen/font_16" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="bottom"
        android:orientation="vertical"
        android:layout_marginBottom="@dimen/spacing_90">

    <Button
        android:id="@+id/btnVerify"
        android:background="@drawable/btn_continue"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="@string/btn_verify"
        android:textSize="@dimen/font_20"/>
    </LinearLayout>

</LinearLayout>