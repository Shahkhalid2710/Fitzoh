<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="250dp"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/spacing_10"
    android:backgroundTint="@color/white"
    android:focusable="true"
    android:foreground="?attr/selectableItemBackgroundBorderless"
    app:cardCornerRadius="@dimen/spacing_5">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvtimename"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/spacing_5"
            android:fontFamily="@font/poppins_medium"
            android:text="@string/breakfast"
            android:textColor="@color/black"
            android:textSize="@dimen/font_14" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <CheckBox
                android:id="@+id/cbstatus1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="@dimen/spacing_5"
                android:button="@drawable/custom_habit_checkbox"
                android:fontFamily="@font/poppins_medium"
                android:textSize="@dimen/font_11" />

            <TextView
                android:id="@+id/tvitem1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="@dimen/spacing_5"
                android:fontFamily="@font/poppins_medium"
                android:text="@string/boiledegg"
                android:textColor="@color/black"
                android:textSize="@dimen/font_12" />

            <TextView
                android:id="@+id/tvno1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="@dimen/spacing_5"
                android:gravity="end"
                android:text="@string/_5_medium"
                android:textColor="@color/textcolorgray"
                android:textSize="@dimen/font_11" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <CheckBox
                android:id="@+id/cbstatus2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="@dimen/spacing_5"
                android:button="@drawable/custom_habit_checkbox"
                android:fontFamily="@font/poppins_medium"
                android:textSize="@dimen/font_11" />

            <TextView
                android:id="@+id/tvitem2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="@dimen/spacing_5"
                android:fontFamily="@font/poppins_medium"
                android:text="@string/kiwifruit"
                android:textColor="@color/black"
                android:textSize="@dimen/font_12" />


            <TextView
                android:id="@+id/tvno2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="@dimen/spacing_5"
                android:gravity="end"
                android:text="@string/_2_fruits"
                android:textColor="@color/textcolorgray"
                android:textSize="@dimen/font_11" />
        </LinearLayout>

        <Button
            android:id="@+id/btnSubmit"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:layout_margin="@dimen/spacing_10"
            android:background="@drawable/btn_continue"
            android:focusable="true"
            android:foreground="?attr/selectableItemBackgroundBorderless"
            android:text="@string/submit"
            android:textSize="@dimen/font_11" />

    </LinearLayout>
</androidx.cardview.widget.CardView>
