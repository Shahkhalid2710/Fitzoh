<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical"
        tools:context=".ui.calender.activities.CalenderFragment">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/ivBack"
                android:layout_width="17dp"
                android:layout_height="17dp"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/spacing_10"
                android:src="@drawable/leftarrow"
                android:contentDescription="@string/todo" />

            <TextView
                android:id="@+id/tvName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:fontFamily="@font/poppins_medium"
                android:text="@string/hellomartin"
                android:textColor="@color/black"
                android:textSize="@dimen/font_18" />
        </RelativeLayout>

        <com.prolificinteractive.materialcalendarview.MaterialCalendarView
            android:id="@+id/calendarView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/spacing_10"
            app:mcv_calendarMode="week"
            app:mcv_weekDayTextAppearance="@style/MyTextStyle"
            app:mcv_headerTextAppearance="@style/MyTextStyle"
            app:mcv_selectionColor="@color/bluee"/>

        <TextView
            android:id="@+id/tvTodayWorkOut"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/spacing_10"
            android:fontFamily="@font/poppins_medium"
            android:text="@string/todayworkoutvideo"
            android:textColor="@color/black"
            android:textSize="@dimen/font_15" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/spacing_10"
            android:background="@color/white"
            android:backgroundTint="@color/white">

            <VideoView
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:backgroundTint="@color/black" />

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:src="@drawable/play_button"
                android:contentDescription="@string/todo" />
        </FrameLayout>

            <TextView
                android:id="@+id/tvTodayDiet"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/spacing_10"
                android:fontFamily="@font/poppins_medium"
                android:gravity="start"
                android:text="@string/todaydiet"
                android:textColor="@color/black"
                android:textSize="@dimen/font_15" />


        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/spacing_10"
            android:backgroundTint="@color/white"
            app:cardCornerRadius="5dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvBreakfast"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/spacing_5"
                    android:fontFamily="@font/poppins_medium"
                    android:text="@string/breakfast"
                    android:textColor="@color/black"
                    android:textSize="@dimen/font_14" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <CheckBox
                        android:id="@+id/cbBoieldegg"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:fontFamily="@font/poppins_medium"
                        android:text="@string/boiledegg"
                        android:textColor="@color/black"
                        android:textSize="@dimen/font_12" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_margin="@dimen/spacing_5"
                        android:gravity="end"
                        android:text="@string/_5_medium"
                        android:textColor="@color/textcolorgray"
                        android:textSize="@dimen/font_11" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <CheckBox
                        android:id="@+id/cbKiwiFruit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:fontFamily="@font/poppins_medium"
                        android:text="@string/kiwifruit"
                        android:textColor="@color/black"
                        android:textSize="@dimen/font_12" />

                    <TextView
                        android:id="@+id/tvFruit"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_margin="@dimen/spacing_5"
                        android:gravity="end"
                        android:text="@string/_2_fruits"
                        android:textColor="@color/textcolorgray"
                        android:textSize="@dimen/font_11" />
                </LinearLayout>

                <Button
                    android:id="@+id/btnSubmit"
                    android:layout_width="100dp"
                    android:layout_height="40dp"
                    android:layout_margin="@dimen/spacing_10"
                    android:background="@drawable/btn_continue"
                    android:text="@string/submit"
                    android:textSize="@dimen/font_11" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/spacing_10"
            android:fontFamily="@font/poppins_medium"
            android:text="@string/todayworkout"
            android:textColor="@color/black"
            android:textSize="@dimen/font_15" />

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/spacing_10"
            android:backgroundTint="@color/white"
            app:cardCornerRadius="5dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tvWorkout"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/spacing_10"
                        android:fontFamily="@font/poppins_medium"
                        android:gravity="start"
                        android:text="@string/workout"
                        android:textColor="@color/black"
                        android:textSize="@dimen/font_13" />

                    <TextView
                        android:id="@+id/tvCardio"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/spacing_10"
                        android:fontFamily="@font/poppins_medium"
                        android:gravity="end"
                        android:text="@string/cardio"
                        android:textColor="@color/black"
                        android:textSize="@dimen/font_13" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginStart="@dimen/spacing_10"
                    android:layout_marginEnd="@dimen/spacing_10"
                    android:background="@color/textcolorgray" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/spacing_10"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tvSets"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:fontFamily="@font/poppins_medium"
                        android:text="@string/sets"
                        android:textColor="@color/black"
                        android:textSize="@dimen/font_12" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_margin="@dimen/spacing_5"
                        android:gravity="end"
                        android:text="@string/_03"
                        android:textColor="@color/textcolorgray"
                        android:textSize="@dimen/font_11" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/spacing_10"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tvExercsise"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:fontFamily="@font/poppins_medium"
                        android:text="@string/exercises"
                        android:textColor="@color/black"
                        android:textSize="@dimen/font_12" />

                    <TextView
                        android:id="@+id/tv03"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_margin="@dimen/spacing_5"
                        android:gravity="end"
                        android:text="@string/_03"
                        android:textColor="@color/textcolorgray"
                        android:textSize="@dimen/font_11" />
                </LinearLayout>

                <Button
                    android:id="@+id/btnStart"
                    android:layout_width="100dp"
                    android:layout_height="40dp"
                    android:layout_margin="@dimen/spacing_10"
                    android:background="@drawable/btn_continue"
                    android:text="@string/start"
                    android:textSize="@dimen/font_11" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/spacing_10"
            android:fontFamily="@font/poppins_medium"
            android:text="@string/livesession"
            android:textColor="@color/black"
            android:textSize="@dimen/font_15" />

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/spacing_10"
            android:backgroundTint="@color/white"
            app:cardCornerRadius="@dimen/spacing_5">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvYoga"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/spacing_20"
                    android:layout_marginTop="@dimen/spacing_10"
                    android:fontFamily="@font/poppins_medium"
                    android:text="@string/yoga"
                    android:textColor="@color/black"
                    android:textSize="@dimen/font_12" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/ivYoga"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_marginStart="@dimen/spacing_10"
                        android:scaleType="fitXY"
                        android:src="@drawable/img_yoga"
                        android:contentDescription="@string/todo" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="@dimen/spacing_5"
                        android:layout_toEndOf="@+id/ivYoga"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tvBerelax"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/poppins_medium"
                            android:text="@string/berelax"
                            android:textColor="@color/black"
                            android:textSize="@dimen/font_12" />

                        <TextView
                            android:id="@+id/tvByNina"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/poppins_medium"
                            android:text="@string/bynina"
                            android:textColor="@color/textcolorgray"
                            android:textSize="@dimen/font_12" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:weightSum="3"
                            android:baselineAligned="false">

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_margin="@dimen/spacing_5"
                                android:layout_weight="1"
                                android:background="@drawable/shape_layout">

                                <TextView
                                    android:id="@+id/tvTime"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:padding="@dimen/spacing_10"
                                    android:text="@string/_04_00_pm"
                                    android:textColor="@color/white"
                                    android:textSize="@dimen/font_10" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_margin="@dimen/spacing_5"
                                android:layout_weight="1"
                                android:background="@drawable/btn_default">

                                <TextView
                                    android:id="@+id/tvTime1"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:padding="@dimen/spacing_10"
                                    android:text="@string/_06_00_pm"
                                    android:textColor="@color/blue"
                                    android:textSize="@dimen/font_10" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_margin="@dimen/spacing_5"
                                android:layout_weight="1"
                                android:background="@drawable/btn_default">

                                <TextView
                                    android:id="@+id/tvTime2"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:padding="@dimen/spacing_10"
                                    android:text="@string/_08_00_pm"
                                    android:textColor="@color/blue"
                                    android:textSize="@dimen/font_10" />
                            </LinearLayout>

                        </LinearLayout>

                    </LinearLayout>

                </RelativeLayout>

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/spacing_10"
            android:fontFamily="@font/poppins_medium"
            android:text="@string/photoandmesurement"
            android:textColor="@color/black"
            android:textSize="@dimen/font_15" />

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="70dp"
            android:layout_marginEnd="@dimen/spacing_10"
            android:layout_marginStart="@dimen/spacing_10"
            android:backgroundTint="@color/white"
            app:cardCornerRadius="@dimen/spacing_5">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/tvPhotoMesurement"
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/body"
                    android:contentDescription="@string/todo" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/spacing_5"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tvWeight"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/spacing_10"
                        android:fontFamily="@font/poppins_medium"
                        android:text="@string/weight"
                        android:textColor="@color/black"
                        android:textSize="@dimen/font_14" />

                    <TextView
                        android:id="@+id/tv80kg"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/spacing_10"
                        android:fontFamily="@font/poppins_medium"
                        android:gravity="end"
                        android:text="@string/_80kg"
                        android:textColor="@color/blue"
                        android:textSize="@dimen/font_14" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginStart="@dimen/spacing_10"
                    android:layout_marginEnd="@dimen/spacing_10"
                    android:background="@color/textcolorgray" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tvBodyfat"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/spacing_10"
                        android:fontFamily="@font/poppins_medium"
                        android:text="@string/bodyfatcount"
                        android:textColor="@color/black"
                        android:textSize="@dimen/font_14" />

                    <TextView
                        android:id="@+id/tv12"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/spacing_10"
                        android:fontFamily="@font/poppins_medium"
                        android:gravity="end"
                        android:text="@string/_12"
                        android:textColor="@color/blue"
                        android:textSize="@dimen/font_14" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginStart="@dimen/spacing_10"
                    android:layout_marginEnd="@dimen/spacing_10"
                    android:background="@color/textcolorgray" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tvWaist"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/spacing_10"
                        android:fontFamily="@font/poppins_medium"
                        android:text="@string/waist"
                        android:textColor="@color/black"
                        android:textSize="@dimen/font_14" />

                    <TextView
                        android:id="@+id/tv93.2cm"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/spacing_10"
                        android:fontFamily="@font/poppins_medium"
                        android:gravity="end"
                        android:text="@string/_93_2cm"
                        android:textColor="@color/blue"
                        android:textSize="@dimen/font_14" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginStart="@dimen/spacing_10"
                    android:layout_marginEnd="@dimen/spacing_10"
                    android:background="@color/textcolorgray" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tvInseam"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/spacing_10"
                        android:fontFamily="@font/poppins_medium"
                        android:text="@string/inseam"
                        android:textColor="@color/black"
                        android:textSize="@dimen/font_14" />

                    <TextView
                        android:id="@+id/tv83.1cm"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/spacing_10"
                        android:fontFamily="@font/poppins_medium"
                        android:gravity="end"
                        android:text="@string/_83_1cm"
                        android:textColor="@color/blue"
                        android:textSize="@dimen/font_14" />
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
</ScrollView>
