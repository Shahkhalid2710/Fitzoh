<?xml version="1.0" encoding="utf-8"?>
 <androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/white"
     android:layout_width="match_parent"
     android:layout_height="match_parent">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".ui.home.activities.NutritionistCounsellorsActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/ivBack"
            android:layout_width="17dp"
            android:layout_height="17dp"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/spacing_10"
            android:src="@drawable/leftarrow"
            android:contentDescription="@string/todo" />

        <TextView
            android:id="@+id/tvDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:fontFamily="@font/poppins_medium"
            android:text="@string/nutritionist_counsellors"
            android:textColor="@color/black"
            android:textSize="@dimen/font_18" />
    </RelativeLayout>

    <TextView
        android:id="@+id/tvTodayWorkOut"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/spacing_10"
        android:fontFamily="@font/poppins_medium"
        android:text="@string/basic_package"
        android:textColor="@color/bluee"
        android:textSize="@dimen/font_15" />
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvNutritionist"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <Button
        android:id="@+id/btnViewMore"
        android:background="@drawable/btn_continue"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="@string/view_more"
        android:textSize="@dimen/font_15"/>
</LinearLayout>
</androidx.core.widget.NestedScrollView>