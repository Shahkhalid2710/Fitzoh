<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/white">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="@dimen/spacing_5"
        android:backgroundTint="@color/white"
        android:layout_margin="@dimen/spacing_10">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tvName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/respiratory_amp_stamina"
                android:textColor="@color/black"
                android:layout_margin="@dimen/spacing_10"
                android:fontFamily="@font/poppins_medium"
                android:textSize="@dimen/font_15"
                android:layout_gravity="center"/>
            <ImageView
                android:id="@+id/ivTest"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_gravity="center"
                android:scaleType="centerCrop"
                android:src="@drawable/image_respirateryandstamina"
                android:contentDescription="@string/todo" />
            <TextView
                android:id="@+id/tvDescription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/lorem_ipsum_dolor_sit_amet_cons_ectetur_adipiscing_elit"
                android:textColor="@color/textcolorgray"
                android:layout_margin="@dimen/spacing_10"
                android:fontFamily="@font/poppins_regular"
                android:textSize="@dimen/font_10"
                android:layout_gravity="center"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>