<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".ui.home.activities.CounsellorActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/ivBack"
            android:layout_width="17dp"
            android:layout_height="17dp"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/spacing_10"
            android:src="@drawable/leftarrow"
            android:contentDescription="@string/todo" />

        <TextView
            android:id="@+id/tvNutritionlistProfile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:fontFamily="@font/poppins_medium"
            android:text="@string/nutritionist_profile"
            android:textColor="@color/black"
            android:textSize="@dimen/font_18" />
    </RelativeLayout>
    <androidx.cardview.widget.CardView
        android:id="@+id/cvTrainerProfile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/spacing_10"
        android:backgroundTint="@color/white"
        app:cardCornerRadius="@dimen/spacing_5">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/spacing_10">

                <ImageView
                    android:id="@+id/ivPic"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:contentDescription="@string/todo"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ena" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toEndOf="@+id/ivPic"
                    android:orientation="vertical"
                    android:padding="@dimen/spacing_5">

                    <TextView
                        android:id="@+id/tvName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppins_medium"
                        android:text="@string/jenna_hopper"
                        android:textColor="@color/black"
                        android:textSize="@dimen/font_15" />

                    <TextView
                        android:id="@+id/tvExperince"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppins_regular"
                        android:text="@string/experience_05_years"
                        android:textColor="@color/textcolorgray"
                        android:textSize="@dimen/font_11" />

                    <TextView
                        android:id="@+id/tvLanguage"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppins_regular"
                        android:text="@string/language_english_hindi"
                        android:textColor="@color/textcolorgray"
                        android:textSize="@dimen/font_11" />
                </LinearLayout>
            </RelativeLayout>

            <TextView
                android:id="@+id/tvAboutMe"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/spacing_10"
                android:fontFamily="@font/poppins_medium"
                android:text="@string/about_me"
                android:textColor="@color/black"
                android:textSize="@dimen/font_15" />

            <TextView
                android:id="@+id/tvDescription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/spacing_10"
                android:layout_marginEnd="@dimen/spacing_10"
                android:layout_marginBottom="@dimen/spacing_10"
                android:fontFamily="@font/poppins_medium"
                android:text="@string/lorem_ipsum_dolor_sit_amet_consectetur_adipiscing_elit_sed_porttitor_dui_sit_amet_arcu_luctus_mollis_donec_pretium_ante_vitae_urna_bibendum_eget_feugiat_velit_consequat_duis_euismod_est_in_tristique_rhoncus_aenean_finibusest_ac_venenatis_sagittis_praesent_quis_eros_iaculis_malesuada_dolor_nec_facilisis_massa_duis_commodo_blandit_tortor_a_aliquam_nam_ac_mollis_metus_integer_quam_erat_consequat_ac_lacinia_nec_gravida_at_quam"
                android:textColor="@color/textcolorgray"
                android:textSize="@dimen/font_11" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>
    <Button
        android:id="@+id/btnSelectNutritionist"
        android:background="@drawable/btn_continue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/spacing_20"
        android:text="@string/select_nutritionist"
        android:padding="@dimen/spacing_10"
        android:textSize="@dimen/font_15"/>


</LinearLayout>