<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical"
        tools:context=".ui.packages.activities.PackagesFragment">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvProfile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:fontFamily="@font/poppins_medium"
                android:text="@string/packages"
                android:textColor="@color/black"
                android:textSize="@dimen/font_18"
                tools:ignore="RelativeOverlap" />

            <ImageView
                android:id="@+id/ivnotification"
                android:layout_width="23dp"
                android:layout_height="23dp"
                android:layout_alignParentEnd="true"
                android:layout_centerInParent="true"
                android:layout_marginEnd="@dimen/spacing_10"
                android:src="@drawable/ic_notification"
                android:contentDescription="@string/todo" />
        </RelativeLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/spacing_10">

            <ImageView
                android:id="@+id/ivanomika"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:scaleType="centerCrop"
                android:src="@drawable/antonikapic"
                android:contentDescription="@string/todo" />

            <TextView
                android:id="@+id/tvHealthTrans"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center|bottom"
                android:layout_marginBottom="@dimen/spacing_10"
                android:fontFamily="@font/poppins_medium"
                android:text="@string/healthtransform"
                android:textColor="@color/white"
                android:textSize="@dimen/font_15" />
        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/spacing_10"
            android:orientation="horizontal"
            android:weightSum="2"
            android:baselineAligned="false">

            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <ImageView
                    android:id="@+id/ivonlinetraining"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/onlinetraining"
                    android:contentDescription="@string/todo" />

                <TextView
                    android:id="@+id/tvonlinetraining"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|bottom"
                    android:layout_marginBottom="@dimen/spacing_10"
                    android:fontFamily="@font/poppins_medium"
                    android:gravity="center"
                    android:text="@string/onlinetraining"
                    android:textColor="@color/white"
                    android:textSize="@dimen/font_14" />
            </FrameLayout>

            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/spacing_5"
                android:layout_weight="1">

                <ImageView
                    android:id="@+id/ivOnlineCounsellor"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/onlinecounceller"
                    android:contentDescription="@string/todo" />

                <TextView
                    android:id="@+id/tvOnlinecounselloer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|bottom"
                    android:layout_marginBottom="@dimen/spacing_10"
                    android:fontFamily="@font/poppins_medium"
                    android:gravity="center"
                    android:text="@string/onlinecounsellore"
                    android:textColor="@color/white"
                    android:textSize="@dimen/font_14" />
            </FrameLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/tvBookSession"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/spacing_10"
            android:fontFamily="@font/poppins_medium"
            android:text="@string/booksessionlive"
            android:textColor="@color/black"
            android:textSize="@dimen/font_15" />

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/spacing_10"
            android:backgroundTint="@color/white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:weightSum="4"
                android:baselineAligned="false">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/ivStrength"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/img_strength"
                        android:contentDescription="@string/todo" />

                    <TextView
                        android:id="@+id/tvStrength"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/spacing_5"
                        android:fontFamily="@font/poppins_medium"
                        android:text="@string/strength"
                        android:textColor="@color/black"
                        android:textSize="@dimen/font_12" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/ivYoga"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/img_yoga"
                        android:contentDescription="@string/todo" />

                    <TextView
                        android:id="@+id/tvYoga"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/spacing_5"
                        android:fontFamily="@font/poppins_medium"
                        android:text="@string/yoga"
                        android:textColor="@color/black"
                        android:textSize="@dimen/font_12" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/ivMeditation"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/img_meditation"
                        android:contentDescription="@string/todo" />

                    <TextView
                        android:id="@+id/tvMeditation"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/spacing_5"
                        android:fontFamily="@font/poppins_medium"
                        android:text="@string/meditation"
                        android:textColor="@color/black"
                        android:textSize="@dimen/font_12" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/ivedurance"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/img_endurance"
                        android:contentDescription="@string/todo" />

                    <TextView
                        android:id="@+id/tvndusrance"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/spacing_5"
                        android:fontFamily="@font/poppins_medium"
                        android:text="@string/endurance"
                        android:textColor="@color/black"
                        android:textSize="@dimen/font_12" />
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="2"
            android:layout_marginBottom="70dp"
            android:orientation="horizontal"
            android:baselineAligned="false">
      <LinearLayout
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:layout_weight="1">
        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/spacing_10"
            android:id="@+id/cvmealpackage"
            android:backgroundTint="@color/white"
            app:cardCornerRadius="7dp">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:id="@+id/ll"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_centerVertical="true"
                    android:padding="@dimen/spacing_10"
                    android:background="@drawable/custom_meal_layout">

                    <ImageView
                        android:id="@+id/ivmeal"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_gravity="center"
                        android:scaleType="fitXY"
                        android:src="@drawable/ic_meal"
                        android:contentDescription="@string/todo" />
                </LinearLayout>

                <TextView
                    android:id="@+id/tvMeal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/mealpackages"
                    android:fontFamily="@font/poppins_medium"
                    android:textSize="@dimen/font_12"
                    android:textColor="@color/black"
                    android:layout_centerVertical="true"
                    android:padding="@dimen/spacing_10"
                    android:layout_toEndOf="@+id/ll"/>
            </RelativeLayout>
        </androidx.cardview.widget.CardView>
      </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">

           <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_margin="@dimen/spacing_10"
               android:id="@+id/cvConsultations"
                android:backgroundTint="@color/white"
                app:cardCornerRadius="7dp"
               tools:ignore="NestedWeights">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:id="@+id/ll2"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_centerVertical="true"
                        android:background="@drawable/custom_layout_consult"
                        android:padding="@dimen/spacing_10">

                        <ImageView
                            android:id="@+id/ivPassword"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_gravity="center"
                            android:scaleType="fitXY"
                            android:src="@drawable/ic_consultations"
                            android:contentDescription="@string/todo" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/tvconsult"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/onetimeconsult"
                        android:fontFamily="@font/poppins_medium"
                        android:textSize="@dimen/font_12"
                        android:textColor="@color/black"
                        android:layout_centerVertical="true"
                        android:padding="@dimen/spacing_10"
                        android:layout_toEndOf="@+id/ll2"/>
                </RelativeLayout>
            </androidx.cardview.widget.CardView>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</ScrollView>