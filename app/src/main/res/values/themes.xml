<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Fitzoh" parent="Theme.AppCompat.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/white</item>
        <!--<item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>-->
        <!-- Customize your theme here. -->
    </style>
    <style name="ButtonStyle">
        <item name="android:fontFamily">@font/poppins_regular</item>
        <item name="fontFamily">@font/poppins_regular</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/btn_background</item>
        <item name="textAllCaps">false</item>
    </style>
    <style name="ButtonDefaultStyle">
        <item name="android:fontFamily">@font/poppins_regular</item>
        <item name="fontFamily">@font/poppins_regular</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/btn_default</item>
        <item name="textAllCaps">false</item>
    </style>
    <style name="EdittextStyle">
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/poppins_medium</item>
        <item name="android:background">@android:color/transparent</item>
    </style>
    <style name="EdittextStylespinner">
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/poppins_medium</item>
        <item name="android:background">@drawable/custom_weight_layout</item>
    </style>

    <style name="MyAlertDialogStyle" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:textColor">@color/blue</item>
        <item name="android:background">@color/white</item>
        <item name="android:colorControlActivated">@color/blue</item>
        <item name="android:textColorPrimary">@color/black</item>
        <item name="android:fontFamily">@font/poppins_regular</item>
    </style>
    <style name="MyTextStyle">
        <item name="android:textColor">@color/bluee</item>
        <item name="android:fontFamily">@font/poppins_medium</item>
    </style>

    <style name="MyLayoutStyle">
        <item name="background">@android:color/transparent</item>
    </style>

    <style name="spinnerstyle">
        <item name="android:textColor">@color/red</item>
        <item name="android:fontFamily">@font/poppins_regular</item>
    </style>

</resources>